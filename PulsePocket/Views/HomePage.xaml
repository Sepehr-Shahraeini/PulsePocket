<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PulsePocket.Views.HomePage"
             xmlns:local="clr-namespace:PulsePocket.Views">
    <VerticalStackLayout>
        <Border  Margin="10" Stroke="LightCoral" HeightRequest="80">
            <Button Clicked="NavigateToForms" Text="Safety Report Forms" BackgroundColor="White" TextColor="Black" CornerRadius="0"/>
        </Border>

        <Border  Margin="10" Stroke="LightCoral" HeightRequest="80" >
            <Button Clicked="NavigateToLibrary"  Text="Library" BackgroundColor="White" TextColor="Black" CornerRadius="0"/>
        </Border>

        <Border  Margin="10" Stroke="LightCoral" HeightRequest="80">
            <Button Text="Help" BackgroundColor="White" TextColor="Black" CornerRadius="0"/>
        </Border>
    </VerticalStackLayout>
</ContentPage>